---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "LOKX.io â€” Lock, escrow and release digital assets",
  description = "Privacy-preserving lock and escrow primitives for digital assets. Arriving at Midnight.",
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/icon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
